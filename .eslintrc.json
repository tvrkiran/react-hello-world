{
    "ignorePatterns": ["**/__tests__/**", "**/*.test.js", "**/*.spec.js", "**/index.js", "**/serviceWorker.js"],
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": false }]
    }
}